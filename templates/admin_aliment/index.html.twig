{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<div>
    <a class="btn btn-secondary w-25 ms-3" href="{{ path('addAliment')}}" role="button">Ajouter un aliment</a>
</div>

<div class="container-fluid">
    <table class="table table-striped table-dark text-center">
        <thead>
            <th>Images</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Proteines</th>
            <th>Calories</th>
            <th>Glucides</th>
            <th>Lipides</th>
            <th>Action</th>
        </thead>
        {% for aliment in aliments %}
        <tr>
            <td><img src="{{ asset(aliment.image)}}" alt="{{aliment.nom}}" width="100px" height="100px"></td>
            <td>{{aliment.nom}}</td>
            <td>{{aliment.prix}}</td>
            <td>{{aliment.proteines}}</td>
            <td>{{aliment.calories}}</td>
            <td>{{aliment.glucides}}</td>
            <td>{{aliment.lipides}}</td>
            <td>
                <a class="btn btn-secondary btn-sm my-2" href="{{path('updateAliment', {'id': aliment.id})}}">Modifier</a>
                <a class="btn btn-danger btn-sm my-2" href="{{path('removeAliment', {'id': aliment.id})}}">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
